{
  "kind": "collectionType",
  "collectionName": "Articles",
  "info": {
    "name": "BlogArticle"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "Title": {
      "type": "string"
    },
    "Subtitle": {
      "type": "text"
    },
    "author": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "blog_articles"
    },
    "content": {
      "type": "richtext"
    },
    "publishedAt": {
      "type": "datetime"
    },
    "lastModified": {
      "type": "datetime"
    },
    "published": {
      "type": "boolean",
      "default": false,
      "required": true
    }
  }
}
